@model LoginViewModel
@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

	<title>Login</title>
</head>
<body>
	<br />
	<br />
	<div class="mx-auto" style="width: 400px; text-align: center; border: solid 2px #0094ff; border-radius:10px;">
		<h1 class="form-heading">OMS</h1>
		<h2 class="form-heading">Toures Balón</h2>
		<div class="login-form">
			<div class="main-div center-block">
				<div class="panel">
					<p>Please enter your email and password</p>
				</div>

				@using (Html.BeginForm("ValidateUser", "Login", FormMethod.Post))
				{
					<p>
						<div class="form-group">
							@Html.TextBoxFor(model => Model.UserName, new { placeholder = "Email", required = "required" })
						</div>
						<div class="form-group">
							@Html.PasswordFor(model => Model.Password, new { placeholder = "Contraseña", required = "required" })
						</div>
						<div class="forgot">
							<a href="reset.html">Forgot password?</a>
						</div>
						<br />
						<input type="submit" value="Sign In" class="btn btn-primary col-md-8" />
					</p>
				}

				@if (ViewBag.showError != null)
				{
					<div class="alert alert-danger">
						<span>@ViewBag.showError</span>
					</div>
				}
			</div>
		</div>
	</div>
</body>
</html>
