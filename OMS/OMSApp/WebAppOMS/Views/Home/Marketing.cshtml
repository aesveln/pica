@{
    ViewData["Title"] = "Contact";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<button class="accordion">Panel de Campañas</button>
<div class="panel">
    <br />
    <div style="text-align: center; width: 100%;">
        <nav class="navbar navbar-light bg-light">
            <form class="form-inline">
                <input class="form-control mr-sm-3" style="width: 50%;" type="search" placeholder="Ingrese codigo o nombre de producto" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
            </form>
        </nav> 
    </div>


    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" style="height: 225px; width: 100%; display: block;" src="">
                <div class="card-body">
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                            Crear campaña
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" style="height: 225px; width: 100%; display: block;" src="">
                <div class="card-body">
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                            Crear campaña
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" style="height: 225px; width: 100%; display: block;" src="">
                <div class="card-body">
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                            Crear campaña
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<button class="accordion">Listas de campañas</button>
<div class="panel">
    <table class="table">
        <thead>
            <tr>
                <th style="text-align: center" scope="col">Activo</th>
                <th scope="col">Id Campaña</th>
                <th style="text-align: center" scope="col">Nombre Campaña</th>
                <th style="text-align: center" scope="col">Producto</th>
                <th style="text-align: center" scope="col">URL Imagen</th>
                <th style="text-align: center" scope="col">Fecha inicio</th>
                <th style="text-align: center" scope="col">Fecha fin</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td style="text-align: center">
                    <input class="form-control" style="width: 20px;" type="checkbox" />
                </td>
                <th scope="row">1</th>
                <td style="text-align: center">Campaña producto 0001</td>
                <td style="text-align: center">Producto 0001</td>
                <td style="text-align: center">http://192.168.0.1:8181/imagen001</td>
                <td style="text-align: center">
                    <input class="form-control" type="date" />
                </td>
                <td style="text-align: center">
                    <input class="form-control" type="date" />
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Editor de Campaña</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control" placeholder="Ingrese nombre de Campaña" />
                <label>Fecha Inicio</label>
                <input type="date" class="form-control" />
                <label>Fecha Fin</label>
                <input type="date" class="form-control" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>