<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:camel="http://camel.apache.org/schema/spring"

       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="

	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        
	http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">


    <!-- ================================================================= -->
    <!-- CANONICAL ADAPTER -->
    <!-- ================================================================= -->
	<bean id="WizzardLoanPlatform" class="co.edu.javeriana.middleware.beans.WizzardLoanPlatform"/>
	
	<bean id="dataSource" class="oracle.jdbc.pool.OracleDataSource" destroy-method="close">
<!-- 		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" /> -->
		<property name="URL" value="jdbc:oracle:thin:@35.235.105.138:1521:xe" />
		<property name="user" value="ADMCYO" />
		<property name="password" value="touresUser.*" />
	</bean>
	
    <camel:routeContext id="adaptadores-wizard-loans-context">

        <camel:route id="adaptador-wizard-loans-route-add">
            <camel:from uri="direct:adaptador-wizard-loans-add"/>
            <camel:log message="Llamado a wizard-loans add."/>
            <camel:to uri="bean:WizzardLoanPlatform?method=LoanPlatofrm"/>
             <camel:to uri="sql:insert into TABLA_UNIVERSAL_BANK (idtabla, loannumber, amount, totalfees) values
            				(SEQ_TABLAUNIVERSALBANK.nextval,  :#numPrestamo, :#montoSol, :#totalCargos)"/>
        </camel:route>


        <camel:route id="adaptador-wizard-loans-route-cancel">
            <camel:from uri="direct:adaptador-wizard-loans-cancel"/>
            <camel:log message="Llamado a wizard-loans cancel."/>
            <camel:to uri="bean:WizzardLoanPlatform?method=LoanPlatofrm"/>
           <camel:to uri="sql:insert into TABLA_UNIVERSAL_BANK (idtabla, loannumber, amount, totalfees) values
            				(SEQ_TABLAUNIVERSALBANK.nextval,  :#numPrestamo, :#montoSol, :#totalCargos)"/>
        </camel:route>


    </camel:routeContext>

</beans>