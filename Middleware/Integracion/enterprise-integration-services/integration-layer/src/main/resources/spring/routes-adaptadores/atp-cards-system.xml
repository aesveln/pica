<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:camel="http://camel.apache.org/schema/spring"

	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="

	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        
	http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">


	<!-- ================================================================= -->
	<!-- CANONICAL ADAPTER -->
	<!-- ================================================================= -->

	<camel:routeContext id="adaptadores-atp-cards-context">

		<camel:route id="adaptador-atp-cards-route-add">
			<camel:from uri="direct:adaptador-atp-cards-add" />
			<camel:log message="Llamado a atp-cards add." />
			<camel:to uri="netty4:tcp://localhost:1234?textline=true&amp;sync=true&amp;disconnect=true"/>
			<camel:log message="Linea escrita en atp: ${body}" />

		</camel:route>

		<camel:route id="adaptador-atp-cards-route-cancel">
			<camel:from uri="direct:adaptador-atp-cards-cancel" />
			<camel:log message="Llamado a atp-cards cancel." />
			<camel:to uri="netty4:tcp://localhost:1235?textline=true&amp;sync=true&amp;disconnect=true"/>
			<camel:log message="Linea escrita en atp: ${body}" />

		</camel:route>


	</camel:routeContext>

</beans>